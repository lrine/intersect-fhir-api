# Intersect FHIR API Configuration
# Copy this file to .env and update with your values

# Application
APP_NAME=Intersect FHIR API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# API Configuration
API_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# MongoDB / Cosmos DB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=intersect_fhir
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=100

# For Azure Cosmos DB:
# MONGODB_URL=mongodb://your-cosmos-account.mongo.cosmos.azure.com:10255/?ssl=true&retrywrites=false&maxIdleTimeMS=120000&appName=@your-cosmos-account@
# MONGODB_DATABASE=intersect_fhir

# JWT Authentication
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200,https://your-frontend-domain.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/intersect-fhir-api.log

# Wearable Integration
SAMSUNG_HEALTH_API_KEY=your-samsung-health-api-key
SAMSUNG_HEALTH_CLIENT_SECRET=your-client-secret

# External Services
GENOMICS_LAB_API_URL=https://genomics-lab.example.com/api
GENOMICS_LAB_API_KEY=your-genomics-api-key

# Email/Notifications (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=notifications@intersect.health
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@intersect.health

# Feature Flags
ENABLE_AUTH=True
ENABLE_RATE_LIMITING=True
ENABLE_AUDIT_LOGGING=True
